{
  "manifest_version": 2,

  "name": "GW Checker",
  "description": "GwChecker description",
  "version": "3.0",

  "content_scripts": [
    {
      "matches": ["http://*.ganjawars.ru/*", "http://ganjawars.ru/*", "http://www.gwars.ru/*", "http://*.gwars.ru/*"],
      "css": ["src/css/main.css"],
      "js": [
        "vendors/require.js",
        "build/main.min.js"
      ]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
